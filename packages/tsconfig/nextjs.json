{
  "$schema": "https://json.schemastore.org/tsconfig",

  "display": "Next.js",
  "extends": "./base.json",

  "compilerOptions": {
    // Modules
    "module": "ESNext",

    // Emit
    "noEmit": true,

    // Editor Support
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Language and Environment
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2015",
    "jsx": "preserve"
  }
}
